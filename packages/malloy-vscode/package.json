{
  "name": "malloy-vscode",
  "publisher": "malloy",
  "displayName": "Malloy",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.56.0"
  },
  "license": "GPL-2.0",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:malloy.runQueryFile",
    "onCommand:malloy.showLicenses",
    "onLanguage:malloy"
  ],
  "main": "./dist/extension",
  "configurationDefaults": {
    "malloy": {
      "editor.semanticHighlighting.enabled": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/looker/malloy"
  },
  "contributes": {
    "commands": [
      {
        "command": "malloy.showLicenses",
        "title": "Malloy: Show Licenses"
      },
      {
        "command": "malloy.runQueryFile",
        "title": "Run Malloy Query File"
      },
      {
        "command": "malloy.runQuery",
        "title": "Run Malloy Query"
      },
      {
        "command": "malloy.runNamedQuery",
        "title": "Run Named Malloy Query"
      },
      {
        "command": "malloy.runTurtleFromSchema",
        "title": "Run Turtle From Schema",
        "icon": {
          "light": "src/media/play.svg",
          "dark": "src/media/play.svg"
        }
      },
      {
        "command": "malloy.runTurtleWithFilters",
        "title": "Run Malloy Query With Filters"
      },
      {
        "command": "malloy.copyFieldPath",
        "title": "Copy Field Path"
      },
      {
        "command": "malloy.refreshSchema",
        "title": "Refresh Schema",
        "icon": {
          "light": "src/media/refresh.svg",
          "dark": "src/media/refresh.svg"
        }
      },
      {
        "command": "malloy.showResultJson",
        "title": "Show Result JSON"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "malloy.refreshSchema",
          "when": "view == malloySchema",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "malloy.runTurtleFromSchema",
          "when": "view == malloySchema && viewItem == turtle",
          "group": "inline"
        }
      ]
    },
    "languages": [
      {
        "id": "malloy",
        "extensions": [
          ".malloy"
        ],
        "aliases": [
          "Malloy",
          "malloy"
        ],
        "filenames": [],
        "configuration": "language.json"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "malloySchema",
          "name": "Schema"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn licenses generate-disclaimer --prod > third_party_notices.txt && webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "clean": "rm -rf dist/ && rm -f tsconfig.tsbuildinfo",
    "build": "yarn workspace malloy-render build && yarn build-without-dependencies",
    "clean-and-build-without-dependencies": "yarn clean && yarn build-without-dependencies",
    "compile": "yarn build-without-dependencies",
    "build-without-dependencies": "yarn package",
    "pretest": "yarn run compile",
    "test": "echo 'no tests for vscode yet'",
    "package": "yarn vsce package --yarn"
  },
  "dependencies": {
    "@observablehq/plot": "^0.1.0",
    "malloy": "*",
    "malloy-render": "*",
    "us-atlas": "^3.0.0",
    "vega": "5.17.3",
    "vega-lite": "4.17.0",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.1"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/glob": "^7.1.3",
    "@types/jsdom": "^16.2.11",
    "@types/mocha": "^8.2.2",
    "@types/node": "^12.19.8",
    "@types/vscode": "1.56.0",
    "copy-webpack-plugin": "^9.0.1",
    "file-loader": "^6.2.0",
    "glob": "^7.1.7",
    "mocha": "^9.0.0",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.2",
    "vsce": "^1.95.0",
    "vscode-test": "^1.5.2",
    "webpack": "^5.41.1",
    "webpack-cli": "^4.7.2",
    "source-map-loader": "^3.0.0"
  }
}
